generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("DATABASE_URL")
}

model Launches {
  id         String    @id @default(uuid())
  provider   String
  Articles   Articles? @relation(fields: [articlesId], references: [id], onDelete: Cascade)
  articlesId Int?

  @@map("launches")
}

model Events {
  id         String    @id @default(uuid())
  provider   String
  Articles   Articles? @relation(fields: [articlesId], references: [id], onDelete: Cascade)
  articlesId Int?

  @@map("events")
}

model Articles {
  id          Int        @id @default(autoincrement())
  url         String
  title       String
  summary     String
  featured    Boolean
  newsSite    String
  imageUrl    String
  publishedAt DateTime   @default(now())
  updatedAt   String?
  launches    Launches[]
  events      Events[]

  @@map("articles")
}
